@{
    ViewBag.Title = "Chat Page";
}

@section scripts
{
    <script src="~/Scripts/jquery.signalR-2.0.0.js"></script>
    <script src="~/SignalR/Hubs"></script>
    <script src="~/js/app.js"></script>
}

<div class="row">
    <br/>
    <div class="col-md-5">
        
        <div class="row">
        <input type="text"
               placeholder="Enter your name" 
               id="personName" />
        </div>
        <br/>
        <div class="row">
        <textarea cols="50" 
                  rows="10"
                  placeholder="Enter your message"
                  id="personMessage"></textarea>
         </div>
        <br/>
        <div class="rows">  
        <button id="sendMessage">Share</button>
        </div>
    </div>
    <div class="col-md-7" id="messageList">
        
    </div>
</div>